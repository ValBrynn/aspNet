@model Indexviewmodel
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">

                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <h3> Latest login: </h3>
                    <h3>  @Html.DisplayFor(model => model.Datum): </h3>
                    <span asp-validation-for="Datum" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h3> Latest 30 days login:</h3>
                    <h3>  @Html.DisplayFor(model => model.TotalLogin) Times </h3>
                    <span asp-validation-for="TotalLogin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h3> Unread Messages: </h3>
                    <h3>  @Html.DisplayFor(model => model.Message) </h3>
                    <span asp-validation-for="Message" class="text-danger"></span>

                </div>
            </form>
        </section>
    </div>
</div>


    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }

    
 
