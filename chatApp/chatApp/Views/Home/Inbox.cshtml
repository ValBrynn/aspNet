@model InboxViewModel
@{
    ViewData["Title"] = "Inbox";
}

<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">

                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <h3>Your Inbox </h3>
                    <h3>
                        @foreach (var email in Model.getMsg)
                        {
                            <div> @email.senderID <button name="submit" type="submit" class="btn btn-default" value="@email.senderID">Message Details</button> </div>
                        }
                    </h3>
                    <span asp-validation-for="getMsg" class="text-danger"></span>
                </div>
            </form>
        </section>
    </div>
</div>
<h3> Read messages: @Html.DisplayFor(model => model.Read)   &nbsp; Deleted messages:@Html.DisplayFor(model => model.Deleted)  </h3>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}