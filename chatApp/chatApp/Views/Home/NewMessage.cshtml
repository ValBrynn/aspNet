@model NewMassageviewmodel
@{
    ViewData["Title"] = "New Message";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <h4></h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Receiver"></label>
                    <input asp-for="Receiver" class="form-control" />
                    <span asp-validation-for="Receiver" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Titel"></label>
                    <input asp-for="Titel" class="form-control" />
                    <span asp-validation-for="Titel" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <label asp-for="Message"></label>
                    <textarea name="Message" cols="45" rows="8" runat="server"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                   
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default" >send</button>
                    <p>@Html.DisplayFor(model => model.SendInfoMessage) </p>
                </div>
               
            </form>
        </section>
    </div>
    

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}







